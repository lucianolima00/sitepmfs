<%= form_with(model: subject, local: true) do |form| %>
  
  <div class="form-group">
    <label for="subject" class="control-label mb-1">Name</label>
    <%= form.text_field :subjectName, id:"subjectName", class:"form-control cc-exp", placeholder:"Enter the subject's name"%>
  </div>
  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <label for="teacher" class="control-label mb-1">Teacher: </label>
        <%= form.select :teacher_id, Teacher.all.collect{|teacher| [User.find(teacher.user_id).firstName, teacher.id]} %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= link_to 'Back', subjects_path, class:"btn btn-danger" %>
    <%= form.submit "Save", class:"btn btn-success"%>
  </div>

<% end %>