<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- Content -->
  <div class="content">
    <div class="row">
              <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                  <div class="card card-signin my-5" style="box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.3)">
                      <div class="card-body">
                          <div class="card-title text-center">
                              <p>Sign In</p>
                          </div>
                          <form class="form-signin">
                              <div class="form-label-group">
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"inputEmail", class:"form-control"  %>
                                  <label for="inputEmail">Email address</label>
                              </div>
              
                              <div class="form-label-group">
                                  <%= f.password_field :password, autocomplete: "current-password", id:"inputPassword", class:"form-control" %>
                                  <label for="inputPassword">Password</label>
                              </div>

                              <% if devise_mapping.rememberable? %>
                                <div class="custom-control custom-checkbox mb-3">
                                    <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck1" %>
                                    <label class="custom-control-label" for="customCheck1">Remember password</label>
                                </div>
                              <% end %>

                              <%= f.submit "Sign In", class:"btn btn-lg btn-primary btn-block text-uppercase" %>
                              
                              <hr class="my-4">
                              
                              <%= render "devise/shared/links" %>
                          </form>
                      </div>
                  </div>
              </div>
          </div>
  </div>
  <!-- Contents Ends -->
<% end %>
